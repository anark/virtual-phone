<%= semantic_form_for @number, :url => numbers_path, :as => :number do |form| %>
  <%= form.inputs "Desired Number" do %>
    <%= form.input :prefix, :placeholder => '604', :label => "Area Code" %>
  <%end%>
  <%= form.semantic_fields_for :phone do |phone| %>
      <%= form.inputs "Forward To Phone" do%>
      <%= phone.input :country_code, :label => "Country", :as => :country %>
      <%= phone.input :number %>
    <%end%>
  <% end %>
  <%= form.actions do %>
    <%= form.action :submit, :label => "Create Number" %>
  <%end%>
<% end %>
